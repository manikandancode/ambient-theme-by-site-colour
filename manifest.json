{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.0",
  "author": "Manikandan D",
  "homepage_url": "https://example.com/ambient-theme",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "theme"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "type": "module",
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Ambient Theme by Site Colour",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "commands": {
    "execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Toggle the ambient theme"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ambient-theme@due.im",
      "strict_min_version": "120.0"
    }
  }
}
